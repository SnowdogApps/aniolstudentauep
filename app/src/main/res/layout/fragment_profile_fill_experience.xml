<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.snowdog.aniolstudentauep.fragment.ProfileFillExperienceFragment"
    >
        <TextView
            android:id="@+id/tv_title"
            android:text="Uzupełnij swoje doświadczenie zawodowe:"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ListView
            android:id="@+id/lv_experience"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_above="@+id/lower_part_container"/>

    <ImageButton
        android:id="@+id/btn_add_experience"
        android:layout_above="@+id/lower_part_container"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_small"
        android:src="@drawable/plusik_small"
        android:background="@drawable/round_button"
        android:layout_width="84dp"
        android:layout_height="84dp" />
    <RelativeLayout
        android:id="@+id/lower_part_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        >
        <include layout="@layout/divider_horizontal"
            android:id="@+id/divider"/>

        <Button
            android:text="Dalej"
            android:id="@+id/btn_next"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="right"
            android:layout_below="@+id/divider"
            android:layout_toLeftOf="@+id/arrow"
            style="@style/green_button"/>
        <ImageView
            android:src="@drawable/arrow"
            android:id="@+id/arrow"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
